<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:id="cardsContainer" alignment="CENTER" spacing="20" style="-fx-padding: 20;" fx:controller="com.example.carrentalsystem.Controller.CarCardController">

    <!-- Car Image -->
    <ImageView fx:id="carImage" fitHeight="200.0" fitWidth="300.0" />

    <!-- Car Details (Model, Availability, Car No, Price) -->
    <VBox spacing="10">
        <Label fx:id="modelLabel" text="Car Model: Example" textFill="white" />
        <Label fx:id="availabilityLabel" text="Availability: Available" textFill="white"/>
        <Label fx:id="carNoLabel" text="Car No: ABC123" textFill="white"/>
        <Label fx:id="priceLabel" text="Price: $100.00 per day" textFill="white"/>
    </VBox>
</VBox>
